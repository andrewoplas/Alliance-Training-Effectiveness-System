<!DOCTYPE tiles-definitions PUBLIC
      "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN" 
      "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
      
<tiles-definitions>
	<!-- Base Definition -->
   	<definition name="default" template="/WEB-INF/layout/master.jsp">  
       <put-attribute name="title" value="" />  
       <put-attribute name="header" value="/WEB-INF/layout/header.jsp" />  
       <put-attribute name="sidebar" value="/WEB-INF/layout/sidebar.jsp" />  
       <put-attribute name="body" value="" />  
       <put-attribute name="footer" value="/WEB-INF/layout/footer.jsp" />
       <put-list-attribute name="stylesheets"></put-list-attribute>
	   <put-list-attribute name="javascripts"></put-list-attribute>
   	</definition>  
   
   	<!-- Auth - Login -->
	<definition name="login" template="/WEB-INF/layout/auth.jsp">
	    <put-attribute name="content" value="/WEB-INF/pages/login.jsp" />
	</definition>
	
	<!-- Auth - Register -->
	<definition name="register" template="/WEB-INF/layout/auth.jsp">
	    <put-attribute name="content" value="/WEB-INF/pages/register.jsp" />
	</definition>

	<!-- Dashboard Pages -->
	<definition name="pages/index" extends="default">
	    <put-attribute name="title" value="ATES - Dashboard" />
	    <put-attribute name="body" value="/WEB-INF/pages/index.jsp" />
	    <put-list-attribute name="stylesheets" inherit="true">
	    	
		</put-list-attribute>
		<put-list-attribute name="javascripts" inherit="true">
			
		</put-list-attribute>
	</definition>
	
	<!-- User - Users List -->
	<definition name="pages/users" extends="default">
	    <put-attribute name="title" value="ATES - Users" />
	    <put-attribute name="body" value="/WEB-INF/pages/users.jsp" />
	    <put-list-attribute name="stylesheets" inherit="true">
	    	<add-attribute value="/plugins/datatables/jquery.dataTables.min.css" />
	    	<add-attribute value="/plugins/footable/css/footable.core.css" />
	    	<add-attribute value="/css/pages/users.css" />
		</put-list-attribute>
		<put-list-attribute name="javascripts" inherit="true">
			<add-attribute value="/plugins/datatables/jquery.dataTables.min.js" />
			<add-attribute value="/plugins/footable/js/footable.all.min.js" />
			<add-attribute value="/js/pages/users.js" />
		</put-list-attribute>
	</definition>
	
	<!-- User -  Registration Request -->
	<definition name="pages/usersRequest" extends="default">
	    <put-attribute name="title" value="ATES - User Request" />
	    <put-attribute name="body" value="/WEB-INF/pages/usersRequest.jsp" />
	    <put-list-attribute name="stylesheets" inherit="true">
	    	<add-attribute value="/plugins/datatables/jquery.dataTables.min.css" />
	    	<add-attribute value="/plugins/toast-master/css/jquery.toast.css" />
	    	<add-attribute value="/css/pages/users.css" />
		</put-list-attribute>
		<put-list-attribute name="javascripts" inherit="true">
			<add-attribute value="/plugins/datatables/jquery.dataTables.min.js" />
			<add-attribute value="/plugins/toast-master/js/jquery.toast.js" />
			<add-attribute value="/js/pages/usersRequest.js" />
		</put-list-attribute>
	</definition>
	
	<!-- Training Plan - Create -->
	<definition name="pages/trainingPlan" extends="default">
	    <put-attribute name="title" value="ATES - Training Plan" />
	    <put-attribute name="body" value="/WEB-INF/pages/trainingPlan.jsp" />
	    <put-list-attribute name="stylesheets" inherit="true">
	    	<add-attribute value="/plugins/steps/steps.css" />
	    	<add-attribute value="/css/pages/trainingPlan.css" />
		</put-list-attribute>
		<put-list-attribute name="javascripts" inherit="true">
			<add-attribute value="/plugins/steps/jquery.easing.min.js" />
			<add-attribute value="/plugins/steps/register-init.js" />
			<add-attribute value="/js/pages/trainingPlan.js" />
		</put-list-attribute>
	</definition>
	
	
	
	<definition name="CourseOutline" extends="default">
	    <put-attribute name="title" value="ATES - CourseOutline" />
	    <put-attribute name="body" value="/WEB-INF/pages/CourseOutline.jsp" />
	    <put-list-attribute name="stylesheets" inherit="true">
	    	<add-attribute value="/plugins/nestable/nestable.css" />
	    	<add-attribute value="https://cdnjs.cloudflare.com/ajax/libs/x-editable/1.5.0/bootstrap3-editable/css/bootstrap-editable.css" />
	    	
		</put-list-attribute>
		<put-list-attribute name="javascripts" inherit="true">
			<add-attribute value="/plugins/nestable/jquery.nestable.js" />
			<add-attribute value="https://cdnjs.cloudflare.com/ajax/libs/x-editable/1.5.0/bootstrap3-editable/js/bootstrap-editable.min.js" />
			<add-attribute value="/js/pages/courseOutline.js" />			
		</put-list-attribute>
	</definition>
	
</tiles-definitions>